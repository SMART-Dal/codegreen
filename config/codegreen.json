{
  "version": "0.1.0",
  "paths": {
    "runtime_modules": {
      "python": "runtime/codegreen_runtime.py",
      "base_directory": "${EXECUTABLE_DIR}/runtime"
    },
    "temp_directory": {
      "base": "${SYSTEM_TEMP}",
      "prefix": "codegreen_",
      "cleanup_on_exit": true,
      "max_age_hours": 24
    },
    "database": {
      "default_path": "${USER_HOME}/.codegreen/energy_data.db",
      "backup_enabled": true,
      "max_size_mb": 1024
    },
    "logs": {
      "directory": "${USER_HOME}/.codegreen/logs",
      "level": "INFO",
      "max_files": 10,
      "max_size_mb": 50
    }
  },
  "measurement": {
    "timing": {
      "precision": "high",
      "sync_method": "perf_counter",
      "calibration_samples": 10
    },
    "pmt": {
      "preferred_sensors": ["rapl", "nvml", "dummy"],
      "fallback_enabled": true,
      "validation_enabled": true,
      "max_init_time_ms": 5000,
      "measurement_interval_ms": 1
    },
    "accuracy": {
      "separate_instrumentation_phase": true,
      "minimize_io_during_measurement": true,
      "preload_runtime_modules": true
    }
  },
  "performance": {
    "string_optimization": {
      "cache_checkpoint_calls": true,
      "precompile_templates": true,
      "max_cache_size": 1000
    },
    "database": {
      "batch_operations": true,
      "transaction_size": 1000,
      "connection_pool_size": 5,
      "prepare_statements": true
    },
    "threading": {
      "max_worker_threads": 4,
      "measurement_thread_priority": "high"
    }
  },
  "security": {
    "sql_injection_protection": true,
    "path_validation": true,
    "temp_file_permissions": "0600"
  },
  "languages": {
    "python": {
      "executable": "python3",
      "runtime_module": "codegreen_runtime.py",
      "extensions": [".py", ".pyw", ".pyi"],
      "optimization_enabled": true
    },
    "cpp": {
      "executable": "g++",
      "extensions": [".cpp", ".cxx", ".cc", ".hpp", ".h"],
      "optimization_enabled": false
    },
    "java": {
      "executable": "java",
      "extensions": [".java"],
      "optimization_enabled": false
    }
  },
  "developer": {
    "debug_mode": false,
    "verbose_logging": false,
    "preserve_temp_files": false,
    "measurement_validation": true,
    "performance_profiling": false
  }
}